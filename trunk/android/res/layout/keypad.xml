<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical" android:layout_height="wrap_content" android:id="@+id/keypad" android:layout_width="fill_parent">
    <FrameLayout android:layout_width="match_parent" android:id="@+id/cursorFrame" android:layout_height="300dip"></FrameLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/linearLayout1">
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/left" android:id="@+id/leftButton" android:onClick="onButtonClick"></Button>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/forward" android:id="@+id/forwardButton" android:onClick="onButtonClick"></Button>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/right" android:id="@+id/rightButton" android:onClick="onButtonClick"></Button>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/stop" android:id="@+id/stopButton" android:onClick="onButtonClick"></Button>
        <ToggleButton android:text="ToggleButton" android:id="@+id/acceleratorToogle" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textOn="On" android:textOff="Off" android:checked="false" android:onClick="onButtonClick"></ToggleButton>
    </LinearLayout>
</LinearLayout>
